        document.getElementById('loginBtn').addEventListener('click', function(e) {
            e.preventDefault();
            
            // æ„å»ºæ‰£å­OAuthæˆæƒé“¾æ¥
            const clientId = '63682119960362288341255487813694.app.coze'; // ç¨åæ›¿æ¢
            const redirectUri = 'https://my-coze-website.vercel.app/api/callback'; // ç¨åæ›¿æ¢
            const authUrl = `https://api.coze.com/oauth/authorize?client_id=${clientId}&redirect_uri=${encodeURIComponent(redirectUri)}&response_type=code&scope=user.info`;
            
            // è·³è½¬åˆ°æ‰£å­æˆæƒé¡µé¢
