    <script>
        // 登录按钮点击事件
        document.getElementById('loginBtn').addEventListener('click', function(e) {
            e.preventDefault();
            
            // 构建扣子OAuth授权链接
            const clientId = '63682119960362288341255487813694.app.coze'; // 稍后替换
            const redirectUri = 'https://my-coze-website.vercel.app/api/callback'; // 稍后替换
            const authUrl = `https://api.coze.com/oauth/authorize?client_id=${clientId}&redirect_uri=${encodeURIComponent(redirectUri)}&response_type=code&scope=user.info`;
            
            // 跳转到扣子授权页面
            window.location.href = authUrl;
        });
        
        // 检查URL中是否有授权结果
        const urlParams = new URLSearchParams(window.location.search);
        const authResult = urlParams.get('auth');
        
        if (authResult === 'success') {
            const token = urlParams.get('token');
            document.getElementById('userInfo').style.display = 'block';
            document.getElementById('accessToken').textContent = token || '已获取';
        }
    </script>
